{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["ESNext"],
    "rootDir": "./",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@social-contract/libs/*": ["packages/libs/*"],
      "@social-contract/instruments/*": ["packages/instruments/*"],
      "@social-contract/experiments/*": ["experiments/*"]
    },
    "types": ["@types/node", "@types/jest"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
