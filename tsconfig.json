{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext"],
    "rootDir": "./",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@social-contract/core/*": ["src/core/*"],
      "@social-contract/implements": ["src/implements"],
      "@social-contract/implements/*": ["src/implements/*"]
    },
    "types": ["@types/node", "@types/jest"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
