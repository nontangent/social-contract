{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext"],
    "rootDir": "./",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@social-contract/core/*": ["lib/core/*"],
      "@social-contract/ethical-game": ["projects/ethical-game"],
      "@social-contract/ethical-game/*": ["projects/ethical-game/*"],
      "@social-contract/complex-system": ["projects/complex-system"],
      "@social-contract/complex-system/*": ["projects/complex-system/*"],
      "@social-contract/presenters": ["lib/presenters"],
      "@social-contract/presenters/*": ["lib/presenters/*"],
      "@social-contract/utils/*": ["lib/utils/*"],
      "@social-contract/experiments/*": ["experiments/*"]
    },
    "types": ["@types/node", "@types/jest"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
